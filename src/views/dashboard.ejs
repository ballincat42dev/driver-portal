<% title = 'Dashboard'; %>
<article>
  <h2>Welcome, <%= user.name %></h2>
  <p>Submit a new race entry from the <a href="/submit">Submit</a> page.</p>

  <h3>Your submissions</h3>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Series</th>
        <th>Protest</th>
        <th>Submitted</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (!submissions.length) { %>
        <tr><td colspan="6">No submissions yet.</td></tr>
      <% } %>
      <% submissions.forEach(s => { %>
        <tr>
          <td><%= s.race_date %></td>
          <td><%= s.race_time %></td>
          <td><%= s.series %></td>
          <td><%= s.is_protest ? 'Yes' : 'No' %></td>
          <td><%= new Date(s.created_at).toLocaleString() %></td>
          <td>
            <a href="/edit/<%= s.id %>" class="secondary">Edit</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</article>


